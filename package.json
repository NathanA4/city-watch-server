{
  "name": "city-watch",
  "version": "0.1.10",
  "description": "City-watch Server",
  "license": "MIT",
  "engines": {
    "node": "18.18.0"
  },
  "homepage": "https://city-watch.ca",
  "author": "",
  "main": "./dist/app.js",
  "scripts": {
    "deploy": "pm2 deploy ecosystem.config.js production",
    "deploy-aws": "aws s3 sync build/ s3://citywatch-server",
    "build": "yarn compile && yarn build:docs",
    "build:docs": "typedoc",
    "compile": "tsc",
    "version:major": "yarn version --major",
    "version:minor": "yarn version --minor",
    "version:patch": "yarn version --patch",
    "postversion": "git push && git push --tags",
    "dev": "ts-node-dev --respawn --watch ./src --debug --clear --prefer-ts --inspect -- ./src/app.ts",
    "docker:build": "docker build .",
    "generate-secret": "openssl ecparam -name prime256v1 -genkey -noout -out ./key.pem",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "package": "pkg ./dist/app.js --out-path=./exec/",
    "serve": "node ./dist/app.js",
    "start": "yarn serve",
    "test": "jest",
    "watch:node": "nodemon ./dist/app.js",
    "watch:pack": "webpack --watch",
    "watch:ts": "tsc -w",
    "webpack": "webpack"
  },
  "nodemonConfig": {
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "data/"
    ],
    "restartable": "rs",
    "watch": [
      "dist/"
    ]
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.3",
    "cors": "^2.8.5",
    "cron-decorators": "^0.1.2",
    "dddos": "^0.1.2",
    "deepcopy": "^2.0.0",
    "dotenv": "^8.2.0",
    "event-dispatch": "^0.4.1",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "microframework-w3tec": "^0.6.3",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "node-cron": "^2.0.3",
    "node-ts-uuid": "^1.0.7",
    "pg": "^8.11.3",
    "querystring": "^0.2.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^2.1.0",
    "sha512": "^0.0.1",
    "swagger-ui-express": "^4.1.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-typedi-extensions": "^0.2.3",
    "uuid": "^8.3.1",
    "wikijs": "^6.0.1",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-status-monitor": "^1.2.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^14.11.10",
    "@types/node-cron": "^2.0.3",
    "@types/pg": "^7.14.1",
    "@types/request": "^2.48.3",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.10",
    "format-package": "^6.1.0",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "pkg": "^4.4.8",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0"
  }
}
